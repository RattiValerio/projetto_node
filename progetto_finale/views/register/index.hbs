<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="css/register_style.css" rel="stylesheet">
</head>
<body>
<div class="wrapper">
    <h2>Registration</h2>
    <form action="/register" method="post">
        <div class="input-box">
            <input type="text" name="username" placeholder="Enter your username" value="{{#if credentials}}{{credentials.username}}{{/if}}">
        </div>

        {{#if error}}
            {{#if error.username}}
                <p class="error-text">{{error.username}}</p>
            {{/if}}
        {{/if}}

        <div class="input-box">
            <input type="email" name="email" placeholder="Enter your email" value="{{#if credentials}}{{credentials.email}}{{/if}}">
        </div>

        {{#if error}}
            {{#if error.email}}
                <p class="error-text">{{error.email}}</p>
            {{/if}}
        {{/if}}

        <div class="input-box">
            <input type="password" name="password" placeholder="Create password">
        </div>

        {{#if error}}
            {{#if error.password}}
                <p class="error-text">{{error.password}}</p>
            {{/if}}
        {{/if}}

        <div class="input-box">
            <input type="password" name="confirm" placeholder="Confirm password">
        </div>

        {{#if error}}
            {{#if error.confirm}}
                <p class="error-text">{{error.confirm}}</p>
            {{/if}}
        {{/if}}

        <div class="input-box button">
            <input type="submit" value="Register Now">
        </div>

        <div class="text">
            <h3>Already have an account? <a href="/login">Login now</a></h3>
        </div>
    </form>
</div>
</body>
</html>
